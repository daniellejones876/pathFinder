<div class="h-container layer4">
  <div class="journal-header">
    <h1><%= @logbook.date.strftime("%d of %B, %Y") %></h1>
    <h3><%= @logbook.time.strftime("%I:%M %p") %></h3>
  </div>
  <div class="journal-entry">
    <h5><%= @logbook.emoji.title %></h5>
    <%= @logbook.emoji.image.html_safe %>
    <br>
    <%= @logbook.summary %>
    <%= cl_image_tag(@logbook.image.key, class:"card-img-top journal-image", crop: :fill) if @logbook.image.attached? %>
    <% @logbook.journals.each do |journal| %>
      Journal entry at <%= journal.created_at.strftime("%I:%M %p") %>:
      <%= journal.prompt.content if journal.prompt %>
      <%= journal.content %>
      <%= link_to "Edit journal", edit_logbook_journal_path(@logbook, journal) %>
    <% end %>
    <div class="d-flex justify-content-between pt-2">
      <%= link_to "Update", edit_logbook_path(@logbook) %>
      <%= link_to "Delete", logbook_path(@logbook), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this log?" } %>
    </div>
  </div>
</div>
