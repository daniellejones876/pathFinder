<div class="h-container layer2">
  <div class="container mt-5">
    <%= simple_form_for(@logbook) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.association :emoji, label: "How was your day?" %>
        <%= f.input :summary, label: "Today's note" %>
        <%= f.input :image, as: :file, label: "Today's photo" %>
        <%= f.association :user, as: :hidden, input_html: { value: current_user.id }  %>
      </div>

      <div class="form-actions">
        <%= submit_tag 'Book recommendation', name: 'submit', class: "btn btn-outline-secondary" %>
        <%= submit_tag 'Playlist recommendation', name: 'submit', class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>
