<div class="h-container layer2">
  <div class="mood-check">
    <%= simple_form_for(@logbook) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <h3>How was your day?</h3>
        <div class="carousel slide" id="emojiCarousel" data-controller="edit-carousel">
          <div class="carousel-inner">
            <% Emoji.all.each_with_index do |emoji, index| %>
              <div class="carousel-item <%= 'active' if index == (@logbook.emoji_id - 1) %> item"
                  data-edit-carousel-target="emoji"
                  data-action="click->edit-carousel#editEmoji"
                  data-emoji-id="<%= emoji.id %>">
                <label class="<%= 'selected' if index == (@logbook.emoji_id - 1) %>">
                  <h1 style="font-size:130px;"><%= emoji.image.html_safe %></h1>
                  <%= radio_button_tag 'logbook[emoji_id]', emoji.id, false, id: nil, style: 'display: none;' %>
                </label>
              </div>
            <% end %>
          </div>

          <a class="carousel-control-prev" href="#emojiCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </a>
          <a class="carousel-control-next" href="#emojiCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </a>

        </div>


        <p><%= f.input :summary, label: "Today's note" %></p>
        <p><%= f.input :image, as: :file, label: "Today's photo" %></p>
        <%= f.association :user, as: :hidden, input_html: { value: current_user.id }  %>
      </div>

      <div class="form-actions">
        <div class="d-flex justify-content-between mt-2">
          <%= submit_tag 'Book', name: 'submit', class: "btn btn-secondary rounded" %>
          <%= submit_tag 'Playlist', name: 'submit', class: "btn btn-secondary rounded" %>
          <%= submit_tag 'Save', name: 'submit', class: "btn btn-secondary rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
