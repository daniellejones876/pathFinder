<div class="h-container layer2">
  <div class="mood-check">
    <%= simple_form_for(@logbook) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
      <h3>How was your day?</h3>
      <div class="d-flex justify-content-between">
        <% Emoji.all.each do |emoticon| %>
          <%= f.label :emoji_id, emoticon.title do %>
          <%= f.radio_button :emoji_id, emoticon.id %>
          <h1><%= emoticon.image.html_safe %></h1>
          <% end %>
        <% end %>
      </div>


        <p><%= f.input :summary, label: "Today's note" %></p>
        <p><%= f.input :image, as: :file, label: "Today's photo" %></p>
        <%= f.association :user, as: :hidden, input_html: { value: current_user.id }  %>
      </div>

      <div class="form-actions">

        <%= submit_tag 'Book recommendation', name: 'submit', class: "btn btn-secondary rounded" %>
        <%= submit_tag 'Playlist recommendation', name: 'submit', class: "btn btn-secondary rounded" %>
      </div>
    <% end %>
  </div>
</div>
