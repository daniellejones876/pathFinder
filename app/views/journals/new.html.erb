<h1>Hi from the new journal page!</h1>

<%= simple_form_for [@logbook, @journal] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :date, as: :hidden, input_html: { value: Date.today } %>
    <%= f.association :logbook, as: :hidden  %>
    <%# <%= f.display :prompt, as: :hidden, input_html: { value: current_user.id }  %> %>

  </div>

  <div class="form-actions">
    <%= f.submit "New log" %>
  </div>
<% end %>

<%= link_to "Homepage", home_path %>
<%= link_to "Logs index", journals_path %>
